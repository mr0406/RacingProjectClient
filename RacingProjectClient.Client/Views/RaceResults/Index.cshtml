@model IEnumerable<RacingProjectClient.Client.ApiModels.RaceResult>

@{
    ViewData["Title"] = "Index";
}

@{
    var actualPage = (int)ViewData["Actual_page"];
    var prevDisabled = (bool)ViewData["Is_prev_disabled"] ? "disabled" : "";
    var nextDisabled = (bool)ViewData["Is_next_disabled"] ? "disabled" : "";

    Dictionary<string, string> prevDict = new Dictionary<string, string>();
    prevDict.Add("page", (actualPage - 1).ToString());

    Dictionary<string, string> nextDict = new Dictionary<string, string>();
    nextDict.Add("page", (actualPage + 1).ToString());
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoredPoints)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RaceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScoredPoints)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index"
   asp-all-route-data="prevDict"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-all-route-data="nextDict"
   class="btn btn-primary @nextDisabled">
    Next
</a>